
<div class="container" style="margin-top:50px;">
  <div class="row">

    <% @bikes.each do |bike| %>
      <div class="col-md-4 mb-4">
        <div class="card-sl">
          <div class="card-image">
            <img
              src="https://www.canyon.com/dw/image/v2/BCML_PRD/on/demandware.static/-/Sites-canyon-master/default/dw855963ab/images/full/full_2023_/2023/full_2023_3444_lux-trail-cf-9_P01_P5.png?sw=1064&sh=599&sm=fit&sfrm=png" class="card-img-top p-3 rounded" />
          </div>

         <!-- <a class="card-action" href="#"><i class="fa fa-heart"></i></a> -->


          <div class="card-heading">
            <%= bike.brand %> (<%= bike.year %>)
          </div>

          <div class="card-text">
            <strong>Type:</strong> <%= bike.bike_type %>
            <strong>Color:</strong> <%= bike.color %>
            <strong>Color:</strong> <%= bike.user.username %>
          </div>

          <div class="card-text">
            <strong>Price:</strong> <%= bike.price %><strong>â‚¬</strong>
          </div>
            <%= link_to "View details", bike_path(bike), class: "card-button" %>
            <!-- <a href="#" class="card-button"> Rent now!</a> --->
        </div>
      </div>
    <% end %>

  </div>
</div>
