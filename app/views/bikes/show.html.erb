<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm">
      <img src="https://www.canyon.com/dw/image/v2/BCML_PRD/on/demandware.static/-/Sites-canyon-master/default/dw855963ab/images/full/full_2023_/2023/full_2023_3444_lux-trail-cf-9_P01_P5.png?sw=1064&sh=599&sm=fit&sfrm=png" class="card-img-top p-3 rounded" alt="Bike Image">
      
        <div class="card-body">
          <h2 class="h5 font-weight-bold"><%= @bike.brand %> (<%= @bike.year %>)</h2>
          <p class="text-muted"><strong>Type:</strong> <%= @bike.bike_type %></p>
          <p class="text-muted"><strong>Color:</strong> <%= @bike.color %></p>
          <p class="text-muted"><strong>Owner:</strong> <%= @bike.user.email %></p>

        <div class="container d-flex">
          <div class="row justify-content-center">
            <%= simple_form_for [@bike, @order] do |f| %>
              <div>

                <div class="btn btn-primary">
                  <%= f.input :rental_date,
                            as: :string,
                            input_html: { data: { controller: "datepicker"}}
                  %>

                </div>
              </div>

              <div>

                <div class="btn btn-primary">
                  <%= f.input :rental_date_end,
                            as: :string,
                            input_html: { data: { controller: "datepicker"}}
                  %>
                </div>
              </div>

          </div>
        </div>
      <%= f.submit "Borrow now!" %>







        </div>
      </div>
    </div>
  </div>
</div>


<% end %>

<%# Back to Listings Button %>
<div class="mt-4">
  <%= link_to "Back to Listings", root_path, class: "btn btn-secondary" %>
</div>
