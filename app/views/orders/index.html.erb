<h1>Hello orders index</h1>

<div class="grid grid-cols-1 md:grid-cols-3 gap-4 p-4">
  <% @orders.each do |order| %>
    <div class="p-4 border rounded-lg shadow-lg bg-white">
      <h2 class="text-xl font-bold"><%= link_to order.created_at, bike_path(order.bike) %></h2>
      <p class="text-gray-600"><%= order.bike.brand %></p>
      <p class="text-gray-600"><%= order.bike.year %></p>
      <p class="text-gray-600"><%= order.bike.color %></p>
    </div>
  <% end %>
</div>
